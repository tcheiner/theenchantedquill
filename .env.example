# The Enchanted Quill - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Stream Chat Configuration
STREAM_CHAT_API_KEY=dz5f4d5kzrue
STREAM_CHAT_SECRET=your_stream_secret_here

# Backend API Configuration  
BACKEND_BASE_URL=https://your-api-domain.com
BACKEND_API_KEY=your_backend_api_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Cloudflare D1 Database
CLOUDFLARE_D1_DATABASE_ID=your_d1_database_id

# Cloudflare R2 Storage
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET_NAME=your-bucket-name
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Amazon/Kindle Integration
AMAZON_API_KEY=your_amazon_api_key
AMAZON_SECRET_KEY=your_amazon_secret_key

# Goodreads Integration
GOODREADS_API_KEY=your_goodreads_key
GOODREADS_SECRET=your_goodreads_secret

# Push Notifications (Apple)
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_team_id

# Analytics (Optional)
ANALYTICS_API_KEY=your_analytics_key

# Development URLs
DEV_BACKEND_URL=http://localhost:3000